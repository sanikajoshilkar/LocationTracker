<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tracking.TrackingFragment"
    xmlns:tools="http://schemas.android.com/tools">

    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/stepscounting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"

        android:backgroundTint="@color/black_overlay"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceDisplayMedium"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="3,837" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Steps"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_steps"
            app:layout_constraintStart_toEndOf="@+id/tv_steps" />



        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:indicatorColor="@color/custom_color_text_secondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_steps"
            app:trackColor="?attr/colorSurfaceVariant"
            app:trackCornerRadius="4dp"
            app:trackThickness="8dp"
            tools:max="7500"
            tools:progress="3837" />


        <TextView
            android:id="@+id/distance_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="?attr/textAppearanceTitleSmall"

            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progressBar"
            tools:text="Distance:" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="4dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_start_stop"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="#0B0909"
            android:backgroundTint="@color/orange_300"
            android:foregroundTint="@color/additional_color"
            android:src="@drawable/ic_start"
            app:shapeAppearanceOverlay="@style/RoundShape"
           />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_pause"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@color/black"
            android:backgroundTint="@color/orange_300"
            android:foregroundTint="@color/additional_color"
            app:shapeAppearanceOverlay="@style/RoundShape"
            android:src="@drawable/ic_share"
          />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_share"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@color/black"
            android:backgroundTint="@color/orange_300"
            android:foregroundTint="@color/additional_color"
            android:src="@drawable/sharenew"
            app:shapeAppearanceOverlay="@style/RoundShape"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_center_location"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@color/black"
            android:backgroundTint="@color/orange_300"
            android:foregroundTint="@color/additional_color"
            android:src="@drawable/ic_share"
            app:shapeAppearanceOverlay="@style/RoundShape"/>
    </LinearLayout>

</FrameLayout>