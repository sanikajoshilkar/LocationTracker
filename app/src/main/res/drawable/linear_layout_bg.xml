<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Transparent part -->
    <item android:right="16dp" android:left="16dp" android:bottom="16dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>

    <!-- Gray part with 95% transparency (5% opacity) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/gray_100_transparent_95"/>
        </shape>
    </item>
</layer-list>
